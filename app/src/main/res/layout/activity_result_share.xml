<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResultShareActivity">

    <RelativeLayout
        android:id="@+id/share_vu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/field_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/story_resultl" />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_minus30sdp"
            android:layout_marginTop="@dimen/_minus30sdp"
            android:scaleType="fitXY"
            android:src="@drawable/football_sharel" />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_minus30sdp"
            android:layout_marginEnd="@dimen/_minus30sdp"
            android:scaleType="fitXY"
            android:src="@drawable/football_sharel" />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/football_sharel"
            android:scaleType="fitXY"
            android:layout_above="@+id/btm_vu"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_minus60sdp"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="match_parent"
            android:layout_above="@+id/ln"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:scaleType="centerInside"
            android:src="@drawable/splash_logol" />

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:background="@drawable/result_box2l"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Al Tahadi"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/blackColor" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Thu, 27/09/2021"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/blackColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/vs"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerInParent="true"
                    android:alpha="0.34"
                    android:scaleType="centerInside"
                    android:src="@drawable/result_vsl" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/team_a_win"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/win_icl" />

                    <View
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_20sdp" />

                    <ImageView
                        android:id="@+id/team_b_win"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/win_icl" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/team_a_vu"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#87000000"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/result_team_headerl" />

                            <TextView
                                android:id="@+id/tv_team_a"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="teamA"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/whiteColor" />

                            <RelativeLayout
                                android:id="@+id/p1_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_team_a"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    app:cardBackgroundColor="#A3006471"
                                    app:cardCornerRadius="@dimen/_40sdp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/emoji_img_vu_p1"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:elevation="4dp"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/playerl" />

                                        <ImageView
                                            android:id="@+id/shirt_img_vu_p1"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_minus7sdp"
                                            android:elevation="2dp"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/shirtl" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <ImageView
                                    android:id="@+id/team_a_captain"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerVertical="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/captain_icl" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/p1_card"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/tv_team_a_p"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toStartOf="@+id/team_a_win_cup"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="teamA"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/whiteColor" />

                                <ImageView
                                    android:id="@+id/team_a_win_cup"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_alignParentEnd="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/win_cupl" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/team_b_vu"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#87000000"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_margin="@dimen/_10sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/result_team_headerl" />

                            <TextView
                                android:id="@+id/tv_team_b"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="teamB"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/whiteColor" />

                            <RelativeLayout
                                android:id="@+id/p2_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_team_b"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    app:cardBackgroundColor="#A3006471"
                                    app:cardCornerRadius="@dimen/_40sdp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="@dimen/_50sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/emoji_img_vu_p2"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:elevation="4dp"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/playerl" />

                                        <ImageView
                                            android:id="@+id/shirt_img_vu_p2"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_40sdp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="@dimen/_minus7sdp"
                                            android:elevation="2dp"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/shirtl" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <ImageView
                                    android:id="@+id/team_b_captain"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerVertical="true"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/captain_icl" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/p2_card"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/tv_team_b_p"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toEndOf="@+id/team_b_win_cup"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="teamA"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/whiteColor" />

                                <ImageView
                                    android:id="@+id/team_b_win_cup"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/win_cupl" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_p1_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Player name "
            android:background="@color/whiteColor"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/blackColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_alignParentStart="true"
            android:layout_above="@id/btm_vu"/>

        <TextView
            android:id="@+id/tv_p2_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Player name "
            android:background="@color/whiteColor"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/blackColor"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/btm_vu"/>

        <RelativeLayout
            android:id="@+id/btm_vu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:background="@color/blackColor"
                android:layout_marginTop="@dimen/_30sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/f_left_vul" />

                    <TextView
                        android:id="@+id/tv_p1_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Win"
                        android:textColor="@color/blackColor"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/f_right_vul" />

                    <TextView
                        android:id="@+id/tv_p2_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Lost"
                        android:textColor="@color/blackColor"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/whiteColor"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7A000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_30sdp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/share"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/whiteColor"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/close_btnl" />

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/share_icl" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>