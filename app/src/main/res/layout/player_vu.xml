<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_58sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:gravity="center_horizontal">
        <!--
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_6sdp"
            android:scaleType="fitXY"
            android:src="@drawable/name_arrow"/> -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_minus1sdp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/gamecard_vu"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/_1sdp"
                app:strokeWidth="@dimen/_1sdp">

                <View
                    android:id="@+id/color_card_vu"
                    android:layout_width="8dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/black"
                    android:gravity="center" />

            </com.google.android.material.card.MaterialCardView>
            <ImageView
                android:id="@+id/circle"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="center"
                android:alpha="0.15"
                android:background="@drawable/activegreenl"/>
            <ImageView
                android:id="@+id/chair"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_50sdp"
                android:scaleType="fitXY"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/chairl" />

            <TextView
                android:id="@+id/tv_plus"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_45sdp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_red" />
            <LinearLayout
                android:id="@+id/emoji_vu"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/player_img_vu"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="centerInside"
                    android:layout_centerHorizontal="true"
                    android:elevation="3dp"
                    android:src="@drawable/playerl" />

                <ImageView
                    android:id="@+id/shirt"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_minus6sdp"
                    android:src="@drawable/bibl" />

            </LinearLayout>

        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/name_vu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_40sdp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/_1sdp"
            app:strokeColor="@color/light_red"
            app:strokeWidth="@dimen/_1sdp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/textbgl"
                android:ellipsize="marquee"
                android:fontFamily="@font/dubai_bold"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:letterSpacing="0.1"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</RelativeLayout>