<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:background="@drawable/rounded_corner_bg_white_no_padding"
    android:padding="@dimen/_8sdp">

    <ImageView
        android:id="@+id/img_vu"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puma evoPOWER 1.3 FG - Safety Yellow Puma evoPOWER 1.3 FG - Safety "
        android:textColor="@color/darkTextColor"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_toEndOf="@+id/img_vu"
        android:minHeight="@dimen/_30sdp"
        android:maxLines="3"
        android:layout_marginStart="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Status"
        android:textColor="@color/subTextColor"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:layout_below="@id/tv_name"
        android:layout_alignStart="@id/tv_name"
        android:layout_alignBottom="@id/img_vu"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</RelativeLayout>