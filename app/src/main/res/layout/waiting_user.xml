<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/rel_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="@dimen/_4sdp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardCornerRadius="@dimen/_10sdp"
            app:contentPadding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/call"
                    android:layout_width="45dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/green_call_btn"
                    android:scaleType="centerInside"/>
                <ImageView
                    android:id="@+id/book"
                    android:layout_width="45dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/book_img"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:scaleType="centerInside"/>
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="45dp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/delete_ic_new"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:scaleType="centerInside"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_name"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/dubai_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:lines="1"
                android:text="@string/phone"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_waiting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom|center"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:lines="1"
                android:text="@string/time"
                android:textColor="@color/red"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>