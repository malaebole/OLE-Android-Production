<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F8FF"
    tools:context=".fragments.BestPlayerDialogFragment">
<!--    android:background="#DEF0F8FF"-->
    <androidx.cardview.widget.CardView
        android:id="@+id/best_player_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="-90dp"
        app:cardBackgroundColor="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="497dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-120dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bestplayer_bg" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_140sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_120sdp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_card"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/_405sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/rating_imagebg" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/spark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/spark"
                    android:layout_gravity="center_vertical|center"
                    android:scaleType="centerInside"/>


                <ImageView
                    android:id="@+id/bisht"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:elevation="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bisht" />

                <ImageView
                    android:id="@+id/crown_vu"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_minus5sdp"
                    android:elevation="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/crown"
                    android:translationZ="@dimen/_90sdp" />

                <LinearLayout
                    android:id="@+id/emoji_vu"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/emoji_img_vu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:elevation="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/face_active" />

                    <ImageView
                        android:id="@+id/shirt_img_vu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_minus7sdp"
                        android:elevation="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/shirtl" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/sub_cancel_icon" />

        <LinearLayout
            android:id="@+id/best_player_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/star"
                    android:layout_marginStart="@dimen/_minus10sdp"
                    android:paddingTop="15dp"
                    android:layout_marginEnd="@dimen/_minus10sdp"
                    android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/best_only" />
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingTop="15dp"
                    android:layout_marginStart="@dimen/_minus10sdp"
                    android:layout_marginEnd="@dimen/_minus10sdp"
                    android:src="@drawable/star"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/player_only" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@null"
            android:scaleType="centerInside"
            android:text="@string/skip"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/choose_vu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:elevation="@dimen/_2sdp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginStart="-25dp"
                android:layout_marginEnd="-25dp"
                android:src="@drawable/best_player_card_bg" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_vu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_submit"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_65sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:scrollbars="none" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardBackgroundColor="@color/transparent"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/best_player_btn_submit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Submit"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>