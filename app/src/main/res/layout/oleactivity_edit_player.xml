<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgVuColor"
    tools:context=".player.OleEditPlayerActivity">

    <include
        android:id="@+id/bar"
        layout="@layout/oleplayer_app_bar_main"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardvu"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardBackgroundColor="#33000000"
                app:cardCornerRadius="@dimen/_55sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/emoji_vu"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/emoji_img_vu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerInside"
                        android:elevation="4dp"/>

                    <ImageView
                        android:id="@+id/shirt_img_vu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_minus7sdp"
                        android:scaleType="centerInside"
                        android:elevation="2dp"/>

                </LinearLayout>

<!--                <ImageView-->
<!--                    android:id="@+id/img_vu_place"-->
<!--                    android:layout_width="@dimen/_40sdp"-->
<!--                    android:layout_height="@dimen/_40sdp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:scaleType="centerInside"-->
<!--                    android:src="@drawable/cam_ic2l" />-->

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/add_player_image_optional"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shirt_recycler_vu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layoutDirection="ltr"
                android:scrollbars="none" />

<!--            <androidx.cardview.widget.CardView-->
<!--                android:id="@+id/cardvu"-->
<!--                android:layout_width="@dimen/_80sdp"-->
<!--                android:layout_height="@dimen/_80sdp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="@dimen/_20sdp"-->
<!--                app:contentPadding="@dimen/_3sdp"-->
<!--                app:cardCornerRadius="@dimen/_5sdp"-->
<!--                app:cardBackgroundColor="@color/whiteColor"-->
<!--                app:cardElevation="0dp">-->

<!--                <ImageView-->
<!--                    android:id="@+id/img_vu"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:src="@drawable/player_active"-->
<!--                    android:scaleType="centerInside" />-->

<!--            </androidx.cardview.widget.CardView>-->

<!--            <Button-->
<!--                android:id="@+id/btn_change"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="@dimen/_35sdp"-->
<!--                android:textColor="@color/blueColorNew"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="@dimen/_10sdp"-->
<!--                android:text="@string/change_photo"-->
<!--                android:textAllCaps="false"-->
<!--                android:background="@null"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/rounded_corner_bg_white_no_padding"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/subTextColor"
                        android:text="@string/first_name"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/subTextColor"
                        android:text="@string/last_name"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/subTextColor"
                        android:text="@string/phone_no"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/subTextColor"
                        android:text="@string/email"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/subTextColor"
                        android:text="@string/date_of_birth"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/subTextColor"
                        android:text="@string/oleCountry"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/subTextColor"
                        android:text="@string/city"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/subTextColor"
                        android:text="@string/nationality"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/et_f_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:hint="@string/first_name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:inputType="textPersonName"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/separatorColor" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/et_l_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:hint="@string/last_name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:inputType="textPersonName"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/separatorColor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/blueColorNew"
                                android:background="@null"
                                android:hint="@string/phone_no"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:inputType="phone"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/btn_verify"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/verify_underline"
                                android:textColor="@color/blueColorNew"
                                android:background="@null"
                                android:textAllCaps="false"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/separatorColor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:hint="@string/email"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:inputType="textEmailAddress"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/separatorColor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/et_dob"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:hint="@string/date_of_birth"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:focusable="true"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/separatorColor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/et_country"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:hint="@string/oleCountry"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:focusable="true"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/separatorColor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:hint="@string/city"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:focusable="true"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/separatorColor"
                            android:layout_alignParentBottom="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/et_nationality"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueColorNew"
                            android:background="@null"
                            android:hint="@string/nationality"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:inputType="text"/>

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:ccp_arrowSize="0dp"
                            android:gravity="center_vertical"
                            app:ccp_arrowColor="@color/blueColorNew"
                            app:ccpDialog_keyboardAutoPopup="false"
                            app:ccp_textSize="@dimen/_14sdp"
                            app:ccp_textGravity="CENTER"
                            app:ccp_showFullName="true"
                            app:ccp_showNameCode="false"
                            app:ccp_showPhoneCode="false"
                            app:ccp_showArrow="false"
                            app:ccp_autoDetectCountry="false"
                            app:ccp_contentColor="@android:color/transparent"
                            app:ccp_showFlag="false" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/green_btn_bg"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/update"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>