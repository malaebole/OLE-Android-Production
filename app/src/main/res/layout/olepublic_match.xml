<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rel_main"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="@color/whiteColor">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/public_cell_bg"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:layout_marginStart="@dimen/_8sdp">

                    <ae.oleapp.util.OleProfileView
                        android:id="@+id/profile_vu"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerInParent="true"
                        app:p_image="@drawable/player_active"
                        app:p_name=""/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.6"
                    android:layout_marginStart="@dimen/_8sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/friendly_game"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-medium"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/whiteColor"/>

                    <TextView
                        android:id="@+id/tv_club_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Al Tahadi club"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="sans-serif"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/whiteColor"/>

                    <TextView
                        android:id="@+id/tv_field_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="field name"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="sans-serif"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="#006A2C"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/green_marker"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"/>

                        <TextView
                            android:id="@+id/tv_loc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dubai"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="#006A2C"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.7"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_4sdp">

                    <com.google.android.material.card.MaterialCardView
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="end"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:strokeWidth="@dimen/_1sdp"
                        app:strokeColor="#0DFF73"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/price_bg_green"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="120 AED"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/whiteColor"/>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:lines="2"
                        android:text="25 May 2020"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="05:00"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginTop="@dimen/_3sdp"/>
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_8sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/public_cell_layer"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/taqseemiya"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent"
                        android:text="تقسيمه"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_above="@id/seek_bar"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:textColor="@color/whiteColor"/>

                    <ae.oleapp.util.OleNestedHorizontalRecyclerView
                        android:id="@+id/recycler_vu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:visibility="visible"
                        android:layout_above="@id/seek_bar"
                        android:layout_toStartOf="@id/taqseemiya"
                        android:layout_marginStart="@dimen/_10sdp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_join"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFE200">

                        <TextView
                            android:id="@+id/tv_join"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/join_game"
                            android:gravity="center"
                            android:textColor="#845700"
                            android:fontFamily="sans-serif-medium"/>

                    </androidx.cardview.widget.CardView>

                    <ae.oleapp.util.OleFlexibleThumbSeekbar
                        android:id="@+id/seek_bar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:maxHeight="@dimen/_3sdp"
                        android:layout_toStartOf="@+id/btn_join"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:thumb="@drawable/slider_thumb"
                        android:progressDrawable="@drawable/progress"
                        android:layout_centerVertical="true"
                        android:splitTrack="false"
                        android:thumbOffset="0dp"
                        android:progress="50"
                        android:max="100" />

                    <TextView
                        android:id="@+id/tv_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/seek_bar"
                        android:text="7 Remaining"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:fontFamily="sans-serif"
                        android:textColor="#006A2C"/>

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/seek_bar"
                        android:text="(Age 17-45)"
                        android:gravity="center_vertical"
                        android:layout_toEndOf="@id/tv_remaining"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="sans-serif"
                        android:textColor="#006A2C"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>