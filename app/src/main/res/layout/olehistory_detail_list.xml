<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@android:color/transparent"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20/03/2020"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/subTextColor"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/tv_club"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Al Tahadi"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/subTextColor"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_p1_status"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:text="Lost"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/blueColorNew"/>

            <TextView
                android:id="@+id/tv_p2_status"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:text="Win"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@id/tv_p1_status"
                android:textColor="@color/blueColorNew"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/bgVuColor"
                android:layout_toEndOf="@id/tv_p2_status">

                <TextView
                    android:id="@+id/tv_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 : 3"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/blueColorNew"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5sdp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/sep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/header"
        android:layout_alignStart="@id/header"
        android:layout_alignEnd="@id/header"
        android:background="@color/separatorColor"/>

</RelativeLayout>