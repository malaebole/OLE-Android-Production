<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialogs.OleLoyaltyCardDialogFragment">

    <RelativeLayout
        android:id="@+id/rel_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_530sdp"
        android:background="#0084FF">

        <ImageView
            android:id="@+id/bg_img_vu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/loyalty_success_bg" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/img_vu_smiley"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/loyalty_green_tick" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/awesome"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/whiteColor" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/left_booking_vu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cardBackgroundColor="#57004B91"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp"
                    app:contentPadding="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <io.canner.stepsview.StepsView
                            android:id="@+id/step_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_toStartOf="@id/tv_perc"
                            app:barColor="@color/separatorColor"
                            app:circle_radius="20"
                            app:completePosition="0"
                            app:labelColor="@color/yellowColor"
                            app:labelSize="15"
                            app:numOfSteps="7"
                            app:progressColor="@color/yellowColor"
                            app:progressTextColor="@color/transparent" />

                        <TextView
                            android:id="@+id/tv_left_booking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/step_view"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_toStartOf="@id/tv_perc"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="1 booking left for get 25% discount"
                            android:textColor="@color/whiteColor" />

                        <TextView
                            android:id="@+id/tv_perc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="sans-serif-medium"
                            android:text="50%"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/whiteColor" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="You have complete 5 bookings, 1 booking remains to get 50% on your next booking Please press the book now button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/whiteColor" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/club_vu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/whiteColor"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/club_banner"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/banner" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_55sdp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/card_vu"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="@android:color/transparent"
                                android:theme="@style/Theme.MaterialComponents.Light"
                                android:visibility="gone"
                                app:cardBackgroundColor="@color/whiteColor"
                                app:cardCornerRadius="@dimen/_25sdp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/logo_vu"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerInside" />

                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_toStartOf="@+id/btn_book"
                                android:layout_toEndOf="@id/card_vu"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_club"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Club"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/darkTextColor" />

                                <TextView
                                    android:id="@+id/tv_loc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:fontFamily="sans-serif"
                                    android:text="City"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/darkTextColor" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/btn_book"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/btn_img"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/green_btn_bg" />

                                <TextView
                                    android:id="@+id/tv_dismiss"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/book_now"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/whiteColor" />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/close_btn" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>