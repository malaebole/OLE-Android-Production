<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgVuColor"
    tools:context=".owner.OleAddClubActivity">

    <include
        android:id="@+id/bar"
        layout="@layout/oleapp_bar_main"/>

    <LinearLayout
        android:id="@+id/tab_vu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/basic_vu"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/basic_img_vu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/selected_basic" />

            <ImageView
                android:id="@+id/basic_check_vu"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:scaleType="centerInside"
                android:src="@drawable/gray_check" />

        </RelativeLayout>

        <View
            android:id="@+id/first_sep_vu"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center_vertical"
            android:background="#9CA8AC" />

        <RelativeLayout
            android:id="@+id/time_vu"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/time_img_vu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/unselected_club_time" />

            <ImageView
                android:id="@+id/time_check_vu"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:scaleType="centerInside"
                android:src="@drawable/gray_check" />

        </RelativeLayout>

        <View
            android:id="@+id/second_sep_vu"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center_vertical"
            android:background="#9CA8AC" />

        <RelativeLayout
            android:id="@+id/fac_vu"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fac_img_vu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/unselected_club_fac" />

            <ImageView
                android:id="@+id/fac_check_vu"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:scaleType="centerInside"
                android:src="@drawable/gray_check" />

        </RelativeLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_vu"
        android:layout_above="@id/btn_add"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/basic_detail_vu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:background="@drawable/club_banner_bg">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_vu_banner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/icon"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:src="@drawable/club_banner_ic"
                                android:scaleType="centerInside"
                                android:layout_centerInParent="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_cover_image"
                                android:textColor="@color/subTextColor"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:layout_marginTop="@dimen/_2sdp"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_minus30sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:background="@drawable/club_banner_bg">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/img_vu_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:scaleType="centerInside"
                            app:riv_corner_radius="@dimen/_5sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/attach_ic"
                                android:scaleType="centerInside"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/logo"
                                android:textColor="@color/subTextColor"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/football_vu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:layout_marginEnd="@dimen/_7sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp"
                        app:strokeWidth="@dimen/_1sdp"
                        app:strokeColor="@color/separatorColor"
                        app:cardBackgroundColor="@color/whiteColor">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_football"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:scaleType="centerInside"
                                android:src="@drawable/football_de"/>

                            <TextView
                                android:id="@+id/tv_football"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/football"
                                android:textColor="@color/subTextColor"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/img_football"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"/>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/padel_vu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp"
                        app:strokeWidth="@dimen/_1sdp"
                        app:strokeColor="@color/separatorColor"
                        app:cardBackgroundColor="@color/whiteColor">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_padel"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:scaleType="centerInside"
                                android:src="@drawable/padel_de"/>

                            <TextView
                                android:id="@+id/tv_padel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/img_padel"
                                android:text="@string/padel"
                                android:textColor="@color/subTextColor" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rounded_corner_bg_white"
                    android:layout_marginTop="@dimen/_10sdp">

                    <EditText
                        android:id="@+id/et_club_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/club_name"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="text"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rounded_corner_bg_white"
                    android:layout_marginTop="@dimen/_8sdp">

                    <EditText
                        android:id="@+id/et_country"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/select_country"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:focusable="true"
                        android:inputType="text"/>

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/down_arrow_dark"
                        android:scaleType="centerInside"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rounded_corner_bg_white"
                    android:layout_marginTop="@dimen/_8sdp">

                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/select_city"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:focusable="true"
                        android:inputType="text"/>

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/down_arrow_dark"
                        android:scaleType="centerInside"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rounded_corner_bg_white"
                    android:layout_marginTop="@dimen/_8sdp">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/phone_no"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:inputType="phone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/rounded_corner_bg_white"
                    android:layout_marginTop="@dimen/_8sdp">

                    <EditText
                        android:id="@+id/et_loc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/location"
                        android:textColor="@color/blueColorNew"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:clickable="true"
                        android:focusableInTouchMode="false"
                        android:focusable="true"
                        android:inputType="text"
                        android:layout_toStartOf="@+id/loc_ic"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                    <ImageView
                        android:id="@+id/loc_ic"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/club_location_ic" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_detail_vu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/whiteColor"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/days_recycler_vu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layoutDirection="ltr"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/add_club_field_border">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/open_24_hours"
                                android:textColor="@color/darkTextColor"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@id/hour_switch"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/hour_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="false"
                                android:theme="@style/MySwitch" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/vu_shift_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/add_club_field_border">

                                <EditText
                                    android:id="@+id/et_open_time_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@null"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:hint="@string/open_time"
                                    android:inputType="date"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/blueColorNew" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/blue_time_ic"
                                    android:scaleType="centerInside"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:background="@drawable/add_club_field_border">

                                <EditText
                                    android:id="@+id/et_close_time_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@null"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:hint="@string/close_time"
                                    android:inputType="date"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/blueColorNew" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/blue_time_ic"
                                    android:scaleType="centerInside"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vu_shift_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/add_club_field_border">

                                <EditText
                                    android:id="@+id/et_open_time_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@null"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:hint="@string/open_time"
                                    android:inputType="date"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/blueColorNew" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/blue_time_ic"
                                    android:scaleType="centerInside"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:background="@drawable/add_club_field_border">

                                <EditText
                                    android:id="@+id/et_close_time_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:background="@null"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:hint="@string/close_time"
                                    android:inputType="date"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/blueColorNew" />

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:src="@drawable/blue_time_ic"
                                    android:scaleType="centerInside"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_alignParentEnd="true"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/add_remove_shift_vu"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <Button
                                    android:id="@+id/btn_remove"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/remove"
                                    android:textAllCaps="false"
                                    android:background="@null"
                                    android:gravity="start|center_vertical"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:fontFamily="sans-serif"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="#FE5517"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <Button
                                    android:id="@+id/btn_add_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/add_more_shift"
                                    android:textAllCaps="false"
                                    android:background="@null"
                                    android:gravity="end|center_vertical"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:fontFamily="sans-serif"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/blueColorNew"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rel_apply_everyday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/add_club_field_border">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/everyday_switch"
                                android:textColor="@color/darkTextColor"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:text="@string/apply_everyday"
                                android:fontFamily="sans-serif"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/everyday_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:theme="@style/MySwitch"
                                android:checked="false"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/whiteColor"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/add_club_field_border"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/flex_booking_time"
                                android:textColor="@color/darkTextColor"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                            <LinearLayout
                                android:id="@+id/flex_time"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@+id/tv"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/rel_one_hour"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/img_vu_one_hour"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/check"
                                        android:layout_centerVertical="true"
                                        android:scaleType="centerInside"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/one_hour"
                                        android:textColor="@color/darkTextColor"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_toEndOf="@+id/img_vu_one_hour"
                                        android:layout_centerVertical="true"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rel_one_half_hour"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/img_vu_one_half_hour"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/check"
                                        android:layout_centerVertical="true"
                                        android:scaleType="centerInside"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/one_half_hour"
                                        android:textColor="@color/darkTextColor"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_toEndOf="@+id/img_vu_one_half_hour"
                                        android:layout_centerVertical="true"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rel_two_hour"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/img_vu_two_hour"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/check"
                                        android:layout_centerVertical="true"
                                        android:scaleType="centerInside"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/two_hour"
                                        android:textColor="@color/darkTextColor"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_toEndOf="@+id/img_vu_two_hour"
                                        android:layout_centerVertical="true"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fac_recycler_vu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/green_btn_bg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_btntitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_now"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>