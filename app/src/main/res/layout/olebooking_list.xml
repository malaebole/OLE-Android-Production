<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rel_main"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/whiteColor"
        app:strokeColor="#4DA6FF"
        app:strokeWidth="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8sdp">

                <RelativeLayout
                    android:id="@+id/size_vu"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/field_size_curve">

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="7x7"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/whiteColor" />

                </RelativeLayout>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/field_img_vu"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@+id/size_vu"
                    android:layout_toStartOf="@+id/ll"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="player name"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/darkTextColor"/>

                    <TextView
                        android:id="@+id/tv_field_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Field name"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/darkTextColor"/>

                    <TextView
                        android:id="@+id/tv_club_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Al Tahadi club"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="sans-serif"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/subTextColor"/>
                    <LinearLayout
                        android:id="@+id/balance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/amount_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/balance"
                            android:fontFamily="sans-serif"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="@color/blackColor"/>
                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="sans-serif"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="@color/redColor"/>
                        <TextView
                            android:id="@+id/amount_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/aed"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="sans-serif"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textColor="@color/redColor"/>

                    </LinearLayout>



                    <TextView
                        android:id="@+id/tv_blocked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/blocked"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="sans-serif"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/redColor"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ll"
                    android:layout_alignEnd="@id/ll"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/call"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#49D483" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@+id/tv_call"
                    android:layout_marginStart="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/confirm_tag"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:src="@drawable/confirm_tag"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/duration_vu"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardBackgroundColor="@color/blueColorNew"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/tv_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="60 min"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/whiteColor"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#C9C9C9"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/gray_time_ic"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6:00 - 7:00"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/darkTextColor"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/lady_icon"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/lady_ic"
                        android:scaleType="centerInside"
                        android:layout_marginEnd="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friendly game"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="sans-serif"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#49D483"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>