<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialogs.ChooseTeamDialogFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvu"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardBackgroundColor="#D4000000"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/select_team"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/whiteColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/team_a_vu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="#A3006471"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:strokeColor="@color/yellowColor"
                    app:strokeWidth="@dimen/_2sdp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tv_team_a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="team A"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#FFFFFF" />

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/team_b_vu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cardBackgroundColor="#A3006471"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:strokeColor="@color/yellowColor"
                    app:strokeWidth="@dimen/_2sdp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tv_team_b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="team B"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#FFFFFF" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="#8C3592E8"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/continue_"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#FFF900" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignEnd="@id/cardvu"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@null"
            android:padding="@dimen/_5sdp"
            android:scaleType="centerInside"
            android:src="@drawable/close_btnl" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>