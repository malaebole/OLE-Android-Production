                            android:layout_height="63dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/redCard"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:elevation="@dimen/_4sdp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/red_card_inactive" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/yellowCard"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:elevation="@dimen/_4sdp"
                                    android:src="@drawable/yellow_card_inactive"/>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/reasonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Write reason or feedback!"
                            android:layout_marginBottom="-20dp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:background="@color/white"
                            android:translationZ="90dp"
                            android:textColor="@color/transparent_black" />
                        <RelativeLayout
                            android:id="@+id/et_msg_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_110sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rating_et_message_bg">

                            <EditText
                                android:id="@+id/et_msg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="0dp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:background="@null"
                                android:gravity="start"
                                android:inputType="textMultiLine"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"/>

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentBottom="true"
                    app:cardBackgroundColor="@color/transparent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/best_player_btn_submit" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/rate_now"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>