<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/rel_main"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="@color/whiteColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/img_vu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_3sdp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:textColor="@color/subTextColor"
                        android:fontFamily="sans-serif"
                        android:autoSizeMinTextSize="@dimen/_10sdp"
                        android:autoSizeMaxTextSize="@dimen/_12sdp"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="fdsafdsafdsafdsafdfdsafdsafdsafdsafd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                    <ImageButton
                        android:id="@+id/btn_fav"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@null"
                        android:src="@drawable/club_unfav"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:scaleType="centerInside"/>

                    <RelativeLayout
                        android:id="@+id/perc_vu"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/shop_discount_bg">

                        <TextView
                            android:id="@+id/tv_perc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-500.00 AED"
                            android:lines="1"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif-medium"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:textColor="#FE5517"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkTextColor"
                    android:fontFamily="sans-serif"
                    android:autoSizeMinTextSize="@dimen/_8sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="marquee"
                    android:text="100 AED"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_10sdp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tv_actual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/subTextColor"
                    android:fontFamily="sans-serif"
                    android:autoSizeMinTextSize="@dimen/_5sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="end"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:text="100"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/tv_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/darkTextColor"
                    android:fontFamily="sans-serif"
                    android:autoSizeMinTextSize="@dimen/_5sdp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="end"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:text="0 Sold"
                    android:textSize="@dimen/_10sdp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>